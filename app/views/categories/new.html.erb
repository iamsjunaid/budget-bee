<div class="navigation blue-nav-white-text">
  <ul class="flex justify-between items-center blue-btn w-full p-4">
    <li class="w-10"><%= link_to image_tag('backarrow.png', alt: 'Back'), categories_path, class: 'nav-link' %></li>
    <h2>NEW CATEGORY</h2>
    <li><%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %></li>
  </ul>
</div>
<% if @category.errors.any? %>
  <div id="error_explanation", style="color: red">
    <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>
    <ul>
    <% @category.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="form-class flex flex-col justify-center">
<%= form_with(model: @category, url: categories_path, method: :post, multipart: true, class: 'mt-10 flex flex-col gap-y-10 form-category') do |form| %>
      <%= form.text_field :name, placeholder: "Enter Category Name", style: "display: block" %>
      <%= form.file_field :icon, id: 'icon_upload', style: "display: block" %>
      <%= form.submit "CREATE CATEGORY", class: 'p-2 py-4 m-4 text-lg w-full border-2 green-btn rounded hover:bg-green-600 focus:outline-none focus:bg-green-600 create-category-btn'%>
<% end %>
</div>