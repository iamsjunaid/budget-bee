<div class="full-page">
<div class="navigation">
  <ul class="flex justify-between blue-btn items-center">
    <li class="w-10"><%= link_to image_tag('backarrow.png', alt: 'Back'), categories_path, class: 'nav-link' %></li>
    <h2><%= @category.name %></h2>
    <li><%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %></li>
  </ul>
</div>
<div class="category-header">
  <p><%= @category.name %></p>
  <p>Total Amount: $<%= @category.purchases.sum(:amount) %></p>
</div>
<div class="purchases-container">
  <% @category.purchases.each do |purchase| %>
    <div class="purchase-item">
      <%= link_to "#{purchase.name}: $#{purchase.amount}", category_purchase_path(@category, purchase) %>
    </div>
  <% end %>
</div>
<div class="">
  <div class="form-category">
    <%= link_to "Add a New Purchase", new_category_purchase_path(@category) , class: 'p-3 px-5 green-btn'%>
  </div>
</div>
</div>