<div class="full-page">
<div class="navigation">
  <ul class="flex justify-between blue-btn p-4 items-center">
    <li class="w-10"><%= link_to image_tag('backarrow.png', alt: 'Back'), categories_path, class: 'nav-link' %></li>
    <h2>TRANSACTIONS</h2>
    <li><%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %></li>
  </ul>
</div>
<div class="category-purchase">
<div class="category-purchase-container">
  <div class="category-header"> 
    <p><%= @category.name %></p>
    <p>Total Amount: $<%= @category.purchases.sum(:amount) %></p>
  </div>
  <div class="purchases-container flex flex-col">
  <% @category.purchases.each do |purchase| %>
    <div class="transaction-link">
       <%= link_to purchase.name, category_purchase_path(@category, purchase), class:'purchase-name' %>
        <p class="purchase-amount">$<%= purchase.amount %></p>
    </div>
  <% end %>
</div>

</div>

  <div class="text-center mt-4">
    <%= link_to new_category_purchase_path(@category) do %>
      <div class="w-full green-btn flex">
        <button class="p-2 py-4 m-4 text-lg w-full border-2 green-btn rounded hover:bg-green-600 focus:outline-none focus:bg-green-600 create-category-btn">
          ADD A NEW PURCHASE
        </button>
      </div>
    <% end %>
  </div>
</div>
</div>