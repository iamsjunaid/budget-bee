<div>
<div class="navigation">
  <ul class="flex justify-between blue-btn items-center">
    <li class="w-10"><%= link_to image_tag('backarrow.png', alt: 'Back'), root_path, class: 'nav-link' %></li>
    <h2>REGISTER</h2>
    <li><%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link", class: "invisible"%></li>
  </ul>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'mt-10 flex flex-col' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field border-t-2">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'w-full  border-none name', placeholder: "Full name"%>
  </div>

  <div class="field border-t-2">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'w-full  border-none email', placeholder: "Email" %>
  </div>

  <div class="field border-t-2">
    <%= f.password_field :password, autocomplete: "new-password",class: 'w-full  border-none password', placeholder: "Password: Min 6 characters" %>
  </div>

  <div class="field border-y-2">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: 'w-full  border-none password', placeholder: "Confirm password" %>
  </div>

  <div class="actions ms-4">
    <%= f.submit "Sign up", class: 'mt-6 p-3 px-5 green-btn rounded hover:bg-green-600'%>
  </div>
<% end %>
</div>
