<div class="navigation">
  <ul class="flex justify-between blue-btn items-center">
    <li class="w-10"><%= link_to image_tag('backarrow.png', alt: 'Back'), category_path(params[:category_id]), class: 'nav-link' %></li>
    <li><h2>Add New Purchase</h2></li>
    <li><%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete }, class: 'nav-link' %></li>
  </ul>
</div>

<div>

  <div class="form-class flex flex-col justify-center">
  <%= form_with(model: [@category, @purchase], url: category_purchases_path(@category), method: :post, id: 'purchase-form') do |form| %> 
  <%= form.text_field :name, class: 'form-control', placeholder: 'Enter Name for Transaction' %>
  <%= form.text_field :amount, class: 'form-control', placeholder: 'Enter Amount for Transaction' %>
  <%= form.hidden_field :primary_category_id, value: @category.id %>
  <div class="mb-4">
    <%= select_tag "category", options_for_select(@categories.map { |category| [category.name, category.id] }), prompt: "Choose a category", class: "form-select" %>
  </div>
  <%= form.submit 'Create Purchase', class: 'green-btn create-purchase-btn' %>
  <% end %>
  </div>

  <div class="back-to-purchase-container">
    <%= link_to "Back to purchases", category_purchases_path, class: "back-to-purchase" %>
  </div>
</div>

