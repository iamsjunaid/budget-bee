<div class="navigation">
  <ul class="flex justify-between blue-btn items-center">
    <li class="w-10"><%= link_to image_tag('backarrow.png', alt: 'Back'), category_path(params[:category_id]), class: 'nav-link' %></li>
    <h2>Transaction: <%= @purchase.name %></h2>
    <li><%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %></li>
  </ul>
</div>
<div class="transaction-container card-item text-center">
  <div class="transaction-heading">
    <p><%= @purchase.name %></p>
    <p><strong>Amount:</strong> <%= @purchase.amount %></p>
  </div>
  <div class="transaction-details">
  <h2>Categories:</h2>
  <ul>
    <% @purchase.categories.each do |category| %>
      <li><%= category.name %></li>
    <% end %>
  </ul>
    <p><strong>Created At:</strong> <%= @purchase.created_at.strftime('%B %d, %Y %I:%M %p') %></p>
  </div>
</div>
